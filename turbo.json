{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env",
    "tsconfig.json",
    ".eslinrc.js",
    ".eslintignore",
    ".eslintrc.json",
    ".gitignore",
    ".npmrc",
    ".nvmrc",
    ".prettierignore",
    ".prettierrc",
    "particle.d.ts",
    "renovate.json",
    "next.config.mjs"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"]
    }
  },
  "globalEnv": ["NEXT_PUBLIC_SERVER_URL", "NEXT_PUBLIC_OAUTH_URL", "NEXT_PUBLIC_GA_ID"],
  "globalDotEnv": [".env"]
}
